<% layout("./layouts/boilerplate") -%>

<div>
  <form action="/posts/new" method="get" class="d-flex justify-content-end">
    <button class="btn btn-danger m-3 px-5 py-2 " >Add Post</button>
  </form>
  <ul style="list-style-type: none;" class="mt-3">
    <% for(post of posts) { %>
  <li >
    <div class="card col-6 offset-3 my-5" >
      <div class="card-body">
      <a href="/profile/<%= post.creator_id%>/view">
        <i class="fa-solid fa-link"></i>
        <img src="<%= users.filter(user=>{user.id === posts.creator_id}).profile_url %>" style="width: 40px; " class="rounded-circle me-3 border">
      </a>
        <h5 class="card-title d-inline"><%=post.title %></h5>
        <p class="card-text"><%=post.content %></p>
      
      </div>
      <div class="card-footer">
        <form action="/posts/<%= post.id%>/view" method="get" class="d-inline">
          <button class="btn btn-outline-dark">View</button>
        </form>
        <form action="/posts/<%= post.id%>" method="get" class="d-inline">
          <button class="btn btn-outline-success">Update</button>
        </form>
        <form action="/posts/<%=post.id%>?_method=DELETE" method="post" class="d-inline">
          <button class="btn btn-outline-danger">Delete</button>
        </form>
        <span><%=post.created_date %> |</span>
        <span><%=post.created_at %></span>
      </div>
    </div>
  </li>
      <% }%>
  </ul>

</div>

