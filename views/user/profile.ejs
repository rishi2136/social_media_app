<% layout("./layouts/boilerplate") -%>
  <div>

    <div class="card my-3 col-lg-10 col-xl-8 mx-auto">
      <div class="row g-0">
        <div class="col-md-4 d-flex align-item-center">
          <img src="<%= user.profile_url%>" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h1 class="ps-2 mb-2 card-title">
              <%= user.username%>
            </h1>
            <h3 class="card-subtitle mb-2 text-body-secondary">Bio: </h3>
            <p class="card-text fs-4">
              <%= user.bio %>
            </p>

            <button type="button" class="btn btn-primary m-2  btn-sm scale-btn">Follow <%= user.follower.length%>
                </button>
            <button type="button" class="btn btn-primary m-2  btn-sm scale-btn">Following <%= user.following.length%>
                </button>
            <br>
            <% if(currUser && user._id.equals(currUser._id) ) { %>
              <form action="/profile/<%=user.id%>?_method=DELETE" method="post" class="d-inline">
                <button type="submit" class="btn btn-danger btn-sm scale-btn">Delete Account</button>
              </form>
              <form action="/profile/<%=user.id%>" method="get" class="d-inline">
                <button type="submit" class="btn btn-dark  btn-sm m-2 scale-btn">Edit Profile</button>
              </form>
              <% } %>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <h3 class="text-center">Your Posts</h3>

    <ul style="list-style-type: none" class="mt-3 ">
      <% for(post of posts) { %>
        <li class="post-card col-10 col-lg-8 mx-auto" style="width: auto;">
          <div class="card   my-5" style="background: inherit;">
            <div class="card-body">
              <h5 class="card-title d-inline">
                <%=post.title %>
              </h5>
              <p class="card-text">
                <%=post.content %>
              </p>

            </div>
            <div class="card-footer">
              <span>
                <%=post.created_date %> |
              </span>
              <span>
                <%=post.created_at %>
              </span>
            </div>

          </div>
        </li>
        <% }%>
    </ul>



    <br><br>
  </div>