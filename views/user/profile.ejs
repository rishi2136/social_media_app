<% layout("./layouts/boilerplate") -%>
  <div>

    <div class="card my-3 col-8 mx-auto">
      <div class="row g-0">
        <div class="col-md-4">
          <img src="<%= user.profile_url%>" class="img-fluid rounded-start" alt="...">
        </div>
        <div class="col-md-8">
          <div class="card-body">
            <h1 class="ps-2 mb-2 card-title">
              <%= user.username%>
            </h1>
            <h3 class="card-subtitle mb-2 text-body-secondary">Bio: </h3>
            <p class="card-text fs-4">
              <%= user.bio %>
            </p>
            <a href="" class="text-decoration-none">Follower: &nbsp; <%= user.follower.length%></a> &nbsp;
            <a href="" class="text-decoration-none">Following: &nbsp; <%= user.following.length%></a>
            <br>
            <button type="button" class="btn btn-primary m-2">Follow</button>
            <button type="button" class="btn btn-primary m-2">Following</button>
            <br>
            <form action="/profile/<%=user.id%>?_method=DELETE" method="post" class="d-inline">
              <button type="submit" class="btn btn-danger">Delete Account</button>
            </form>
            <form action="/profile/<%=user.id%>" method="get" class="d-inline">
              <button type="submit" class="btn btn-dark m-2">Edit Profile</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <hr>
    <h3 class="text-center">Your Posts</h3>

    <ul style="list-style-type: none;" class="mt-3">
      <% for(post of posts) { %>
        <li>
          <div class="card col-6 offset-3 my-5">
            <div class="card-body">
              <h5 class="card-title d-inline">
                <%=post.title %>
              </h5>
              <p class="card-text">
                <%=post.content %>
              </p>

            </div>
            <div class="card-footer">
              <form action="/posts/<%= post.id%>/view" method="get" class="d-inline">
                <button class="btn btn-outline-dark">View</button>
              </form>
              <form action="/posts/<%= post.id%>" method="get" class="d-inline">
                <button class="btn btn-outline-success">Update</button>
              </form>
              <form action="/posts/<%=post.id%>?_method=DELETE" method="post" class="d-inline">
                <button class="btn btn-outline-danger">Delete</button>
              </form>
              <span>
                <%=post.created_date %> |
              </span>
              <span>
                <%=post.created_at %>
              </span>
            </div>
          </div>
        </li>
        <% }%>
    </ul>

  </div>